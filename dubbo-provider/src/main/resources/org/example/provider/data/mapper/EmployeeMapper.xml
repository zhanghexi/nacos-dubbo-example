    <select id="queryEmployeesByConditions" parameterType="java.lang.String" resultMap="EmpMap">
        SELECT e.EMP_NAME AS name,e.EMP_SEX AS sex,e.EMP_ROLE AS role,e.EMP_AGE AS age,e.EMP_SALARY AS salary
        FROM EMPLOYEE e
        WHERE INSTR(e.EMP_NAME, #{empName}) > 0
        GROUP BY e.EMP_NAME,e.EMP_SEX,e.EMP_ROLE,e.EMP_AGE,e.EMP_SALARY
        ORDER BY e.EMP_SALARY DESC
